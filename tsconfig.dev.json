{
  "compilerOptions": {
    "outDir": "./built/lib",
    "allowJs": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./index.ts",
    "./src/**/*",
    "./benchmark/**/*"
  ]
}
